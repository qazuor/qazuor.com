---
interface Props {
    text: string;
    count?: number;
    className?: string;
    showHtml?: boolean;
}

const { text, count, className = '', showHtml = false } = Astro.props;

const hasIcon = Astro.slots.has('icon');
---

<div class:list={['category-title-wrapper', className]}>
    {hasIcon && (
        <span class="category-title-icon">
            <slot name="icon" />
        </span>
    )}
    <h2 class="category-title">
        {showHtml ? <span set:html={text} /> : text}
    </h2>
    {count !== undefined && (
        <span class="category-title-count">({count})</span>
    )}
</div>

<style>
    .category-title-wrapper {
        display: flex;
        align-items: center;
        gap: 0.75rem;
    }

    .category-title-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        color: hsl(var(--primary));
    }

    .category-title {
        font-size: 2.9rem;
        font-weight: 800;
        line-height: 1.3;
        color: hsl(var(--foreground));
        text-shadow: 0 0 40px hsl(var(--primary) / 0.3);
        position: relative;
        margin: 0;
        padding-bottom: 0.5rem;
    }

    .category-title::after {
        content: '';
        position: absolute;
        bottom: 0;
        left: 0;
        width: 100%;
        height: 2px;
        background: linear-gradient(90deg, hsl(var(--primary)), hsl(var(--accent)), transparent);
        border-radius: 2px;
        box-shadow: 0 0 15px hsl(var(--primary) / 0.5);
    }

    .category-title-count {
        font-size: 1.125rem;
        font-weight: 400;
        color: hsl(var(--foreground-secondary));
        margin-left: 0.25rem;
    }
</style>
