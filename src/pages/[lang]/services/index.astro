---

<BaseLayout title={pageTitle} description={pageDescription}>
    <!-- Services Section -->
    <section
        id="services"
        class="relative section services-section overflow-hidden pt-32"
        style={`background-color: ${sectionsColors.services}`}
    >
        <!-- Animated Gradient Background -->
        <AnimatedGradientBackground />

        <div class="container-custom">
            <!-- Section Title -->
            <SectionTitle
                title={t('services.title', { markdown: true })}
                subtitle={t('services.subtitle', { markdown: true })}
                customElement="h1"
            />

            <!-- Page Description -->
            <div class="mt-8 mb-12 text-sm text-foreground-secondary max-w-3xl mx-auto leading-relaxed text-center" set:html={servicesPageDescription} />

            <!-- Services Grid -->
            <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                {services.map((service) => {
                    const serviceTranslation = serviceTranslations[service.id];
                    const pixelConfig = serviceColors[service.id].pixel;

                    return (
                        <div
                            class="service-card group relative overflow-hidden bg-foreground/5 backdrop-blur-sm rounded-2xl border border-foreground/10 transition-all duration-300 isolate min-h-[420px]"
                            style={`--active-color: ${pixelConfig.activeColor}`}
                        >
                            <!-- Pixel Canvas Effect -->
                            <PixelCanvas
                                gap={pixelConfig.gap}
                                speed={pixelConfig.speed}
                                colors={pixelConfig.colors}
                                colorsLight={pixelConfig.colorsLight}
                                class="absolute inset-0 z-[1] pointer-events-none"
                            />

                            <!-- Card overlay for depth effect -->
                            <div class="service-card-overlay absolute inset-0 z-0 pointer-events-none" />


                            <!-- Card Content -->
                            <div class="service-card-content relative p-8 h-full flex flex-col">
                                <!-- Service Header -->
                                <div class="flex items-start gap-4 mb-6">
                                    <ServiceIcon name={service.iconId} size={40} class="service-icon text-primary transition-all duration-300" />
                                    <div class="flex-1">
                                        <h2 class="text-2xl font-bold text-foreground mb-2">
                                            <a
                                                href={`/${lang}/services/${service.slug}`}
                                                class="stretched-link"
                                                set:html={serviceTranslation.title}
                                            />
                                        </h2>
                                        <p class="text-foreground-secondary leading-relaxed">
                                            {serviceTranslation.description}
                                        </p>
                                    </div>
                                </div>

                                <!-- Features List (Preview - First 4) -->
                                <div class="flex-grow mb-6">
                                    <ul class="space-y-2">
                                        {serviceTranslation.features.slice(0, 4).map((feature: string) => (
                                            <li class="flex items-center text-foreground-secondary">
                                                <svg class="w-5 h-5 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                                    <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                                </svg>
                                                {feature}
                                            </li>
                                        ))}
                                    </ul>
                                </div>

                                {/* Pricing - Hidden for now, keeping code for future use
                                <div class="mb-6">
                                    <div class="flex items-center justify-between p-4 bg-foreground/5 rounded-lg border border-foreground/10">
                                        <span class="text-foreground-secondary font-medium">
                                            {lang === 'es' ? 'Precio:' : 'Price:'}
                                        </span>
                                        <span class="text-foreground font-bold text-lg">{formatPricing(service)}</span>
                                    </div>
                                </div>
                                */}

                                <!-- CTA Button -->
                                <a
                                    href={`/${lang}/?interests=${getInterestsForService(service.id)}#contact`}
                                    class="service-cta-button relative z-10 mt-auto inline-flex items-center justify-center w-full px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-all duration-200"
                                >
                                    {serviceTranslation.ctaButton}
                                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 5l7 7-7 7" />
                                    </svg>
                                </a>
                            </div>

                            <!-- Hover Content (Icon + Title centered) -->
                            <div class="service-card-hover-content absolute inset-0 z-[2] flex flex-col items-center justify-center p-8 pointer-events-none">
                                <ServiceIcon name={service.iconId} size={64} class="service-icon-hover mb-4 transition-all duration-300" />
                                <h3 class="text-2xl font-bold text-foreground text-center">
                                    <a
                                        href={`/${lang}/services/${service.slug}`}
                                        class="stretched-link pointer-events-auto"
                                        set:html={serviceTranslation.title}
                                    />
                                </h3>
                                <a
                                    href={`/${lang}/?interests=${getInterestsForService(service.id)}#contact`}
                                    class="service-cta-button relative z-10 mt-6 inline-flex items-center justify-center px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-all duration-200 pointer-events-auto"
