---
/**
 * AboutSummaryCard Component
 * A quick-reference card with key highlights for LLM and human scanning
 */

interface Props {
    translations: {
        title: string;
        items: Array<{
            icon: string;
            label: string;
            value: string;
        }>;
    };
    className?: string;
}

const { translations, className = '' } = Astro.props;

const iconMap: Record<string, string> = {
    location: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M21 10c0 7-9 13-9 13s-9-6-9-13a9 9 0 0 1 18 0z"/><circle cx="12" cy="10" r="3"/></svg>`,
    experience: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><rect x="2" y="7" width="20" height="14" rx="2" ry="2"/><path d="M16 21V5a2 2 0 0 0-2-2h-4a2 2 0 0 0-2 2v16"/></svg>`,
    specialty: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="16 18 22 12 16 6"/><polyline points="8 6 2 12 8 18"/></svg>`,
    languages: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><line x1="2" y1="12" x2="22" y2="12"/><path d="M12 2a15.3 15.3 0 0 1 4 10 15.3 15.3 0 0 1-4 10 15.3 15.3 0 0 1-4-10 15.3 15.3 0 0 1 4-10z"/></svg>`,
    availability: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><polyline points="22 4 12 14.01 9 11.01"/></svg>`,
    timezone: `<svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><circle cx="12" cy="12" r="10"/><polyline points="12 6 12 12 16 14"/></svg>`
};
---

<div class:list={['about-summary-card rounded-xl p-6 backdrop-blur-sm', className]}>
    <h3 class="text-lg font-semibold text-foreground mb-4 flex items-center gap-2">
        <svg xmlns="http://www.w3.org/2000/svg" class="w-5 h-5 text-primary" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
            <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"/>
            <polyline points="14 2 14 8 20 8"/>
            <line x1="16" y1="13" x2="8" y2="13"/>
            <line x1="16" y1="17" x2="8" y2="17"/>
            <polyline points="10 9 9 9 8 9"/>
        </svg>
        <span set:html={translations.title} />
    </h3>

    <ul class="space-y-3">
        {translations.items.map((item) => (
            <li class="flex items-start gap-3 text-foreground-secondary">
                <span class="text-primary flex-shrink-0 mt-0.5" set:html={iconMap[item.icon] || iconMap.experience} />
                <div class="flex flex-col sm:flex-row sm:items-baseline sm:gap-2">
                    <span class="font-medium text-foreground text-sm">{item.label}:</span>
                    <span class="text-sm" set:html={item.value} />
                </div>
            </li>
        ))}
    </ul>
</div>

<style>
    .about-summary-card {
        background: linear-gradient(
            135deg,
            rgba(var(--color-primary-rgb), 0.08) 0%,
            rgba(var(--color-primary-rgb), 0.02) 100%
        );
        border: 1px solid rgba(var(--color-primary-rgb), 0.15);
    }

    .dark .about-summary-card {
        background: linear-gradient(
            135deg,
            rgba(var(--color-primary-rgb), 0.12) 0%,
            rgba(var(--color-primary-rgb), 0.04) 100%
        );
        border: 1px solid rgba(var(--color-primary-rgb), 0.2);
    }
</style>
