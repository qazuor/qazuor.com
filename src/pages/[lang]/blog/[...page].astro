---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import type { GetStaticPaths, Page } from 'astro';
import AnimatedGradientBackground from '@/components/ui/AnimatedGradientBackground.astro';
import UnifiedButton from '@/components/ui/UnifiedButton.astro';
import { getCategoryColor } from '@/data/categoryColors';
import { sectionsColors } from '@/data/sectionBackgrounds';
import { languages } from '@/i18n/ui';
import { getLangFromUrl, getTranslations, processMarkdown } from '@/i18n/utils';
import BaseLayout from '@/layouts/BaseLayout.astro';
import { getBlogPostsForLangWithFallback, getEffectiveSlug, type SupportedLang } from '@/utils/blog';

// Define the type for our blog post data
interface BlogPostData {
    title: string;
    excerpt: string;
    date: string;
    readTime: string;
    tags: string[];
    slug: string;
    category: string;
}

interface Props {
    page: Page<BlogPostData>;
}

export const getStaticPaths: GetStaticPaths = async ({ paginate }) => {
    const allBlogPosts = await getCollection('blog');

    // Generate paginated paths for each language
    return Object.keys(languages).flatMap((lang) => {
        // Get posts with fallback (if English version doesn't exist, use Spanish)
        const postsWithFallback = getBlogPostsForLangWithFallback(allBlogPosts, lang as SupportedLang)
            .sort((a, b) => b.post.data.publishDate.getTime() - a.post.data.publishDate.getTime())
            .map(({ post }) => ({
                title: post.data.title,
                excerpt: post.data.excerpt,
                date: post.data.publishDate.toISOString().split('T')[0],
                readTime: post.data.readTime,
                tags: post.data.tags,
                slug: `/${lang}/blog/${getEffectiveSlug(post)}`,
                category: post.data.category || post.data.tags[0] || 'Article'
            }));

        return paginate(postsWithFallback, {
            params: { lang },
            pageSize: 9 // 9 posts per page (3x3 grid)
        });
    });
};

const { page }: Props = Astro.props;
const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);

const title = `${t('blog.title', { markdown: false })} - qazuor.com`;

// Process pageDescription: markdown + line breaks
const pageDescription = processMarkdown(t('blog.pageDescription'));
---

<BaseLayout title={title}>
    <div class="relative min-h-screen overflow-hidden" style={`background-color: ${sectionsColors.blog}`}>
        <AnimatedGradientBackground />

        <div class="container-custom relative z-10 pt-32 pb-20">
            <!-- Hero Header -->
            <header class="text-center mb-16 md:mb-20">
                <div class="inline-flex items-center gap-2 px-4 py-2 rounded-full bg-primary/10 border border-primary/20 mb-6">
                    <span class="w-2 h-2 rounded-full bg-primary animate-pulse"></span>
                    <span class="text-sm font-medium text-primary">{page.total} {t('blog.pagination.articles')}</span>
                </div>

                <h1 class="text-4xl sm:text-5xl md:text-6xl font-bold mb-6 tracking-tight">
                    <span class="gradient-text-section" set:html={t('blog.title', { markdown: true })} />
                </h1>

                <p class="text-lg md:text-xl text-foreground-secondary max-w-2xl mx-auto leading-relaxed" set:html={t('blog.subtitle', { markdown: true })} />

                <!-- Page Description -->
                <div class="mt-8 text-sm text-foreground-secondary max-w-3xl mx-auto leading-relaxed text-left" set:html={pageDescription} />

                <!-- Page indicator -->
                {
                    page.lastPage > 1 && (
                        <div class="mt-8 flex items-center justify-center gap-3">
                            <div class="h-px w-12 bg-gradient-to-r from-transparent to-foreground/20"></div>
                            <span class="text-sm text-foreground-muted font-medium tabular-nums">
                                {t('blog.pagination.page')} {page.currentPage} {t('blog.pagination.of')} {page.lastPage}
                            </span>
                            <div class="h-px w-12 bg-gradient-to-l from-transparent to-foreground/20"></div>
                        </div>
                    )
                }
            </header>

            <!-- Blog Posts Grid -->
            {
                page.data.length > 0 ? (
                    <>
                        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6 lg:gap-8">
                            {page.data.map((post: BlogPostData, index: number) => (
                                <article
                                    class="blog-card group relative overflow-hidden rounded-2xl bg-gradient-to-br from-card via-card/95 to-card/80 border border-foreground/5 hover:border-primary/30 transition-all duration-500 hover:shadow-2xl hover:shadow-primary/10 hover:-translate-y-2"
                                    style={`animation-delay: ${index * 50}ms`}
                                >
                                    {/* Animated gradient border on hover */}
                                    <div class="absolute inset-0 rounded-2xl bg-gradient-to-br from-primary/20 via-accent/10 to-secondary/20 opacity-0 group-hover:opacity-100 transition-opacity duration-500 -z-10 blur-xl" />

                                    {/* Gradient accent bar with glow */}
                                    <div class="relative">
                                        <div
                                            class="h-1 w-full transition-all duration-300 group-hover:h-1.5"
                                            style={`background: linear-gradient(90deg, ${getCategoryColor(post.category).bg}, oklch(0.70 0.18 200))`}
                                        />
                                        <div
                                            class="absolute inset-0 blur-sm opacity-50"
                                            style={`background: linear-gradient(90deg, ${getCategoryColor(post.category).bg}, oklch(0.70 0.18 200))`}
                                        />
                                    </div>

                                    {/* Card content */}
                                    <a href={post.slug} class="block p-6 lg:p-7">
                                        {/* Category & Meta */}
                                        <div class="flex items-center justify-between mb-4">
                                            <span
                                                class="inline-flex items-center px-3 py-1.5 rounded-lg text-xs font-bold uppercase tracking-wider text-white shadow-lg backdrop-blur-sm"
                                                style={`background: ${getCategoryColor(post.category).bg}; box-shadow: 0 4px 14px ${getCategoryColor(post.category).shadow}`}
                                            >
                                                {post.category}
                                            </span>
                                            <span class="flex items-center gap-1.5 text-xs text-foreground-muted font-medium">
                                                <svg class="w-3.5 h-3.5" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
                                                </svg>
                                                {post.readTime.match(/\d+/)?.[0]} min
                                            </span>
                                        </div>

                                        {/* Title */}
                                        <h2 class="text-base lg:text-lg font-bold text-foreground mb-3 leading-tight group-hover:text-primary transition-colors duration-300 line-clamp-2">
                                            {post.title}
                                        </h2>

                                        {/* Excerpt */}
                                        <p class="text-foreground-secondary text-sm lg:text-base mb-5 line-clamp-3 leading-relaxed" set:html={processMarkdown(post.excerpt)} />

                                        {/* Footer: Date, Tags & Read more - all in one row */}
                                        <div class="flex items-center gap-3 pt-4 border-t border-foreground/5">
                                            <time
                                                datetime={post.date}
                                                class="text-xs text-foreground-muted font-medium shrink-0"
                                            >
                                                {new Date(post.date).toLocaleDateString(lang === 'es' ? 'es-ES' : 'en-US', {
                                                    year: 'numeric',
                                                    month: 'short',
                                                    day: 'numeric'
                                                })}
                                            </time>

                                            {/* Separator dot */}
                                            <span class="w-1 h-1 rounded-full bg-foreground/20 shrink-0" />

                                            {/* Tags (max 2) - takes available space */}
                                            <div class="flex items-center gap-1.5 flex-1 min-w-0 overflow-hidden">
                                                {post.tags.slice(0, 2).map((tag: string) => (
                                                    <span class="text-xs px-2 py-0.5 bg-foreground/5 text-foreground-muted rounded-md font-medium group-hover:bg-primary/10 group-hover:text-primary transition-colors duration-300 truncate">
                                                        #{tag}
                                                    </span>
                                                ))}
                                            </div>

                                            {/* Read more indicator - inline, not absolute */}
                                            <div class="w-8 h-8 rounded-full bg-foreground/5 flex items-center justify-center group-hover:bg-primary group-hover:scale-110 transition-all duration-300 shrink-0">
                                                <svg
                                                    class="w-4 h-4 text-foreground-muted group-hover:text-white group-hover:translate-x-0.5 transition-all duration-300"
                                                    fill="none"
                                                    viewBox="0 0 24 24"
                                                    stroke="currentColor"
                                                    stroke-width="2"
                                                >
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M17 8l4 4m0 0l-4 4m4-4H3" />
                                                </svg>
                                            </div>
                                        </div>
                                    </a>
                                </article>
                            ))}
                        </div>

                        {/* Pagination Controls */}
                        {page.lastPage > 1 && (
                            <nav class="mt-16 md:mt-20" aria-label="Pagination">
                                <div class="flex flex-col sm:flex-row items-center justify-center gap-4">
                                    {/* Previous Button */}
                                    {page.url.prev ? (
                                        <UnifiedButton
                                            href={page.url.prev}
                                            variant="secondary"
                                            size="md"
                                        >
                                            <Fragment slot="icon-left">
                                                <svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                                                </svg>
                                            </Fragment>
                                            {t('blog.pagination.previous')}
                                        </UnifiedButton>
                                    ) : (
                                        <UnifiedButton
                                            variant="secondary"
                                            size="md"
                                            disabled={true}
                                        >
                                            <Fragment slot="icon-left">
                                                <svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M15 19l-7-7 7-7" />
                                                </svg>
                                            </Fragment>
                                            {t('blog.pagination.previous')}
                                        </UnifiedButton>
                                    )}

                                    {/* Page Numbers */}
                                    <div class="flex items-center gap-2">
                                        {Array.from({ length: page.lastPage }, (_, i) => i + 1).map((pageNum) => {
                                            const isCurrentPage = pageNum === page.currentPage;
                                            const href = pageNum === 1 ? `/${lang}/blog` : `/${lang}/blog/${pageNum}`;

                                            return isCurrentPage ? (
                                                <UnifiedButton
                                                    variant="primary"
                                                    size="md"
                                                    active={true}
                                                    class="tabular-nums"
                                                >
                                                    {pageNum}
                                                </UnifiedButton>
                                            ) : (
                                                <UnifiedButton
                                                    href={href}
                                                    variant="secondary"
                                                    size="md"
                                                    class="tabular-nums"
                                                >
                                                    {pageNum}
                                                </UnifiedButton>
                                            );
                                        })}
                                    </div>

                                    {/* Next Button */}
                                    {page.url.next ? (
                                        <UnifiedButton
                                            href={page.url.next}
                                            variant="secondary"
                                            size="md"
                                            iconPosition="right"
                                        >
                                            {t('blog.pagination.next')}
                                            <Fragment slot="icon-right">
                                                <svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                                                </svg>
                                            </Fragment>
                                        </UnifiedButton>
                                    ) : (
                                        <UnifiedButton
                                            variant="secondary"
                                            size="md"
                                            iconPosition="right"
                                            disabled={true}
                                        >
                                            {t('blog.pagination.next')}
                                            <Fragment slot="icon-right">
                                                <svg class="w-full h-full" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
                                                    <path stroke-linecap="round" stroke-linejoin="round" d="M9 5l7 7-7 7" />
                                                </svg>
                                            </Fragment>
                                        </UnifiedButton>
                                    )}
                                </div>
                            </nav>
                        )}
                    </>
                ) : (
                    <div class="text-center py-20">
                        <div class="inline-flex items-center justify-center w-20 h-20 rounded-full bg-foreground/5 mb-6">
                            <svg class="w-10 h-10 text-foreground-muted" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="1.5">
                                <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 14.25v-2.625a3.375 3.375 0 00-3.375-3.375h-1.5A1.125 1.125 0 0113.5 7.125v-1.5a3.375 3.375 0 00-3.375-3.375H8.25m0 12.75h7.5m-7.5 3H12M10.5 2.25H5.625c-.621 0-1.125.504-1.125 1.125v17.25c0 .621.504 1.125 1.125 1.125h12.75c.621 0 1.125-.504 1.125-1.125V11.25a9 9 0 00-9-9z" />
                            </svg>
                        </div>
                        <p class="text-foreground-secondary text-xl font-medium">{t('blog.noArticles')}</p>
                    </div>
                )
            }
        </div>
    </div>
</BaseLayout>

<style>
    /* Card entrance animation */
    article {
        animation: fadeInUp 0.6s ease-out both;
    }

    @keyframes fadeInUp {
        from {
            opacity: 0;
            transform: translateY(20px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    /* Gradient text animation */
    .gradient-text-section {
        background-size: 200% auto;
        animation: gradientShift 8s ease infinite;
    }

    @keyframes gradientShift {
        0%, 100% { background-position: 0% center; }
        50% { background-position: 100% center; }
    }
</style>
