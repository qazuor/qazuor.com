---
export interface Props {
  variant?: 'wave' | 'diagonal' | 'curve';
  intensity?: 'light' | 'medium' | 'strong';
  className?: string;
}

const { variant = 'wave', intensity = 'medium', className = '' } = Astro.props;

// Purple-to-blue gradients inspired by the reference image
const getGradientColors = (intensity: string) => {
  const gradients = {
    light: {
      from: 'rgba(147, 51, 234, 0.6)', // Purple with transparency
      via: 'rgba(99, 102, 241, 0.8)', // Indigo
      to: 'rgba(59, 130, 246, 0.6)', // Blue with transparency
    },
    medium: {
      from: 'rgba(147, 51, 234, 0.8)', // Stronger purple
      via: 'rgba(99, 102, 241, 1)', // Full indigo
      to: 'rgba(59, 130, 246, 0.8)', // Stronger blue
    },
    strong: {
      from: 'rgba(124, 58, 237, 1)', // Full purple
      via: 'rgba(79, 70, 229, 1)', // Full indigo
      to: 'rgba(37, 99, 235, 1)', // Full blue
    },
  };

  return gradients[intensity as keyof typeof gradients] || gradients.medium;
};

const colors = getGradientColors(intensity);
const svgId = `divider-${variant}-${intensity}-${Math.random().toString(36).substring(2, 11)}`;
---

<div class={`section-divider ${className}`} data-variant={variant}>
  {
    variant === 'wave' && (
      <svg
        viewBox="0 0 1200 200"
        xmlns="http://www.w3.org/2000/svg"
        preserveAspectRatio="none"
        class="divider-svg"
      >
        <defs>
          <linearGradient id={`${svgId}-bg`} x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style={`stop-color:${colors.from}`} />
            <stop offset="50%" style={`stop-color:${colors.via}`} />
            <stop offset="100%" style={`stop-color:${colors.to}`} />
          </linearGradient>
          
          <linearGradient id={`${svgId}-overlay`} x1="0%" y1="0%" x2="100%" y2="0%">
            <stop offset="0%" style={`stop-color:rgba(147, 51, 234, 0.9)`} />
            <stop offset="25%" style={`stop-color:rgba(126, 34, 206, 0.8)`} />
            <stop offset="50%" style={`stop-color:rgba(99, 102, 241, 0.9)`} />
            <stop offset="75%" style={`stop-color:rgba(79, 70, 229, 0.8)`} />
            <stop offset="100%" style={`stop-color:rgba(59, 130, 246, 0.9)`} />
          </linearGradient>
        </defs>
        
        <!-- Background gradient -->
        <rect width="100%" height="100%" fill={`url(#${svgId}-bg)`} />
        
        <!-- Main wave -->
        <path
          d="M0,0 C300,150 600,50 900,100 C1050,125 1125,75 1200,100 L1200,200 L0,200 Z"
          fill={`url(#${svgId}-overlay)`}
        />
        
        <!-- Secondary wave for depth -->
        <path
          d="M0,20 C200,120 400,60 600,80 C800,100 1000,60 1200,80 L1200,200 L0,200 Z"
          fill="rgba(124, 58, 237, 0.6)"
        />
      </svg>
    )
  }

  {
    variant === 'curve' && (
      <svg
        viewBox="0 0 1200 200"
        xmlns="http://www.w3.org/2000/svg"
        preserveAspectRatio="none"
        class="divider-svg"
      >
        <defs>
          <linearGradient id={`${svgId}-curve`} x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style={`stop-color:${colors.from}`} />
            <stop offset="100%" style={`stop-color:${colors.to}`} />
          </linearGradient>
        </defs>
        
        <rect width="100%" height="100%" fill={`url(#${svgId}-curve)`} />
        <path 
          d="M0,0 C400,200 800,200 1200,0 L1200,200 L0,200 Z" 
          fill="rgba(99, 102, 241, 0.8)" 
        />
      </svg>
    )
  }

  {
    variant === 'diagonal' && (
      <svg
        viewBox="0 0 1200 200"
        xmlns="http://www.w3.org/2000/svg"
        preserveAspectRatio="none"
        class="divider-svg"
      >
        <defs>
          <linearGradient id={`${svgId}-diagonal`} x1="0%" y1="0%" x2="100%" y2="100%">
            <stop offset="0%" style={`stop-color:${colors.from}`} />
            <stop offset="100%" style={`stop-color:${colors.to}`} />
          </linearGradient>
        </defs>
        
        <rect width="100%" height="100%" fill={`url(#${svgId}-diagonal)`} />
        <polygon 
          points="0,200 1200,0 1200,200" 
          fill="rgba(79, 70, 229, 0.8)" 
        />
      </svg>
    )
  }
</div>

<style>
  .section-divider {
    /* Full viewport width, breaking out of container */
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    overflow: hidden;
    z-index: 10;
    display: block;
    line-height: 0;
  }

  .divider-svg {
    width: 100%;
    height: 120px; /* Larger height for better visual impact */
    display: block;
    transform: translateZ(0);
  }

  /* Responsive height adjustments */
  @media (min-width: 768px) {
    .divider-svg {
      height: 150px; /* Even larger on tablets */
    }
  }

  @media (min-width: 1024px) {
    .divider-svg {
      height: 180px; /* Maximum height on desktop for strong separation */
    }
  }

  /* Subtle animations for waves */
  .section-divider[data-variant="wave"] .divider-svg {
    animation: gentle-wave 12s ease-in-out infinite;
  }

  @keyframes gentle-wave {
    0%, 100% {
      transform: translateZ(0) scaleY(1) translateX(0);
    }
    25% {
      transform: translateZ(0) scaleY(1.02) translateX(-2px);
    }
    50% {
      transform: translateZ(0) scaleY(0.98) translateX(2px);
    }
    75% {
      transform: translateZ(0) scaleY(1.01) translateX(-1px);
    }
  }

  /* Remove any default margins that could create gaps */
  .section-divider,
  .section-divider svg {
    margin: 0;
    padding: 0;
    border: none;
    outline: none;
  }

  /* Ensure crisp edges */
  .divider-svg path,
  .divider-svg polygon {
    vector-effect: non-scaling-stroke;
  }

  /* Enhanced appearance in dark mode */
  .dark .section-divider {
    filter: brightness(1.1) saturate(1.2);
  }

  /* Disable animations for users who prefer reduced motion */
  @media (prefers-reduced-motion: reduce) {
    .section-divider .divider-svg {
      animation: none;
    }
  }
</style>
