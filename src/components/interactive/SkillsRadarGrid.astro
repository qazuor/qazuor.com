---
import { RadarChart } from './RadarChart';

export interface RadarCategory {
    id: string;
    title: string;
    skills: Array<{
        name: string;
        value: number;
        color: string;
        icon?: string;
    }>;
}

interface Props {
    categories: RadarCategory[];
    description?: string;
}

const { categories, description } = Astro.props;
---

<div class="skills-radar-grid">
    <!-- First Row: Description Text (Full Width) -->
    <div class="description-wrapper">
        <div class="description-content">
            {description && <div class="description-text" set:html={description} />}
        </div>
    </div>

    <!-- Second Row: Two Radar Charts Side by Side (Desktop) / Stacked (Mobile) -->
    <div class="charts-wrapper">
        <!-- Technical Skills Chart -->
        <div class="radar-chart-wrapper">
            <RadarChart
                client:only="react"
                title={categories[0].title}
                titleHtml={true}
                skills={categories[0].skills}
                size={550}
                gridLevels={5}
                maxValue={100}
                className="w-full"
            />
        </div>

        <!-- Human & Creative Skills Chart -->
        <div class="radar-chart-wrapper">
            <RadarChart
                client:only="react"
                title={categories[1].title}
                titleHtml={true}
                skills={categories[1].skills}
                size={550}
                gridLevels={5}
                maxValue={100}
                className="w-full"
            />
        </div>
    </div>
</div>

<style>
    .skills-radar-grid {
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    /* First Row: Description (Full Width) */
    .description-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 0;
    }

    .description-content {
        max-width: 900px;
        width: 100%;
    }

    /* Second Row: Two Charts Side by Side */
    .charts-wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        width: 100%;
        overflow: visible;
    }

    @media (min-width: 1024px) {
        .charts-wrapper {
            grid-template-columns: repeat(2, 1fr);
            gap: 3rem;
        }
    }

    .radar-chart-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 2rem;
        background: var(--color-background-secondary);
        border: 1px solid var(--color-border);
        border-radius: 1.25rem;
        min-height: 100%;
        overflow: visible;
    }

    .description-text {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--color-foreground);
        margin: 0 0 2.5rem 0;
        text-align: left;
    }

    .description-text :global(strong) {
        color: var(--color-primary);
        font-weight: 600;
    }

    /* Mobile optimizations */
    @media (max-width: 1024px) {
        .skills-radar-grid {
            gap: 2rem;
        }

        .charts-wrapper {
            gap: 1.5rem;
        }

        .radar-chart-wrapper {
            padding: 0.75rem 1rem;
        }

        .description-text {
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 2rem;
        }
    }

    @media (max-width: 768px) {
        .skills-radar-grid {
            gap: 2rem;
        }

        .charts-wrapper {
            gap: 2rem;
        }

        .radar-chart-wrapper {
            padding: 0.5rem 0.75rem;
        }

        .description-text {
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }
    }

    /* Light mode - Default styles */
    .radar-chart-wrapper {
        background: rgba(0, 0, 0, 0.02);
    }

    .description-text {
        color: rgba(0, 0, 0, 0.9);
    }

    /* Dark mode - When .dark class is present on html */
    :global(.dark) .radar-chart-wrapper {
        background: rgba(255, 255, 255, 0.05);
    }

    :global(.dark) .description-text {
        color: rgba(255, 255, 255, 0.9);
    }
</style>
