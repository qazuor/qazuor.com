---
/**
 * FAQItem - Accordion component for FAQ questions
 * Collapsed by default, expands on click
 */

interface Props {
    question: string;
    answer: string;
    isOpen?: boolean;
}

const { question, answer, isOpen = false } = Astro.props;
---

<details class="faq-item group border-b border-primary/20 last:border-b-0" open={isOpen}>
    <summary
        class="flex items-center justify-between gap-4 py-5 px-4 cursor-pointer list-none hover:bg-primary/5 transition-colors duration-200 rounded-lg"
    >
        <h3 class="text-lg font-semibold text-foreground group-open:text-primary transition-colors duration-200 text-left">
            <span set:html={question} />
        </h3>
        <span
            class="flex-shrink-0 w-6 h-6 text-primary/60 group-open:text-primary transition-transform duration-300 group-open:rotate-180"
            aria-hidden="true"
        >
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="2" stroke="currentColor">
                <path stroke-linecap="round" stroke-linejoin="round" d="m19.5 8.25-7.5 7.5-7.5-7.5" />
            </svg>
        </span>
    </summary>
    <div class="faq-content px-4 pb-5 text-foreground-secondary leading-relaxed">
        <p set:html={answer} />
    </div>
</details>

<style>
    .faq-item summary::-webkit-details-marker {
        display: none;
    }

    .faq-item summary::marker {
        display: none;
    }

    .faq-content {
        animation: slideDown 0.2s ease-out;
    }

    @keyframes slideDown {
        from {
            opacity: 0;
            transform: translateY(-8px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }

    details:not([open]) .faq-content {
        display: none;
    }
</style>
