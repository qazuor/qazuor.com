---
interface Props {
  name?: string;
  role?: string;
  location?: string;
  experience?: string;
  email?: string;
  availability?: string;
  bio?: string;
  translations?: {
    title: string;
    subtitle: string;
    connect: string;
  };
}

const {
  name = 'qazuor',
  role = 'Full-Stack Developer',
  location = 'Remote',
  experience = '5+ years',
  email = 'hello@qazuor.com',
  availability = 'Open to opportunities',
  bio = 'Passionate about creating exceptional digital experiences with modern web technologies. Specialized in React, TypeScript, and performance optimization.',
  translations = {
    title: 'About Me',
    subtitle: 'Get to know me through code',
    connect: "Let's build something amazing together!",
  },
} = Astro.props;
---

<section class="section" id="about">
  <div class="container-custom">
    <div class="max-w-4xl mx-auto">
      <!-- Section Title -->
      <div class="mb-12 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          <span class="gradient-text">{translations.title}</span>
        </h2>
        <p class="text-foreground-secondary text-lg">{translations.subtitle}</p>
      </div>

      <!-- Code Block -->
      <div
        class="relative bg-background-secondary rounded-lg border border-foreground/10 overflow-hidden"
      >
        <!-- Code Header -->
        <div
          class="flex items-center gap-2 px-4 py-3 border-b border-foreground/10 bg-background-tertiary"
        >
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-error/80"></div>
            <div class="w-3 h-3 rounded-full bg-warning/80"></div>
            <div class="w-3 h-3 rounded-full bg-success/80"></div>
          </div>
          <span class="ml-2 text-sm text-foreground-secondary font-mono">developer.js</span>
        </div>

        <!-- Code Content -->
        <div class="p-6 font-mono text-sm md:text-base overflow-x-auto">
          <div class="code-line px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-syntax-keyword">const</span>
            <span class="text-foreground">developer</span>
            <span class="text-foreground-secondary">=</span>
            <span class="text-foreground-secondary">{'{'}</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">name</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-string">'{name}'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">role</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-string">'{role}'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">location</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-string">'{location}'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">experience</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-string">'{experience}'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">email</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-string">'{email}'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">availability</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-string">'{availability}'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">bio</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-string">'{bio}'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">skills</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-foreground-secondary">[</span>
          </div>

          <div class="code-line ml-8 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-syntax-string">'React'</span>
            <span class="text-foreground-secondary">,</span>
            <span class="text-syntax-string">'TypeScript'</span>
            <span class="text-foreground-secondary">,</span>
            <span class="text-syntax-string">'Node.js'</span>
            <span class="text-foreground-secondary">,</span>
          </div>

          <div class="code-line ml-8 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-syntax-string">'Astro'</span>
            <span class="text-foreground-secondary">,</span>
            <span class="text-syntax-string">'GSAP'</span>
            <span class="text-foreground-secondary">,</span>
            <span class="text-syntax-string">'Tailwind CSS'</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-foreground-secondary">],</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-primary">connect</span>
            <span class="text-foreground-secondary">:</span>
            <span class="text-syntax-keyword">function</span>
            <span class="text-foreground-secondary">() {'{'}</span>
          </div>

          <div class="code-line ml-8 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-syntax-keyword">return</span>
            <span class="text-syntax-string">"{translations.connect}"</span>
            <span class="text-foreground-secondary">;</span>
          </div>

          <div class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-foreground-secondary">{'}'}</span>
          </div>

          <div class="code-line px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-foreground-secondary">{'};'}</span>
          </div>

          <div class="code-line mt-4 px-2 py-1 -mx-2 rounded transition-colors duration-300">
            <span class="text-syntax-keyword">export default</span>
            <span class="text-foreground">developer</span>
            <span class="text-foreground-secondary">;</span>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
