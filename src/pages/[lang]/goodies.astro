---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import AnimatedGradientBackground from '@/components/ui/AnimatedGradientBackground.astro';
import CategoryIcon from '@/components/ui/CategoryIcon.astro';
import LanguageIcon from '@/components/ui/LanguageIcon.astro';
import SectionTitle from '@/components/ui/SectionTitle.astro';
import { sectionsColors } from '@/data/sectionBackgrounds';
import { languages } from '@/i18n/ui';
import { getLangFromUrl, getTranslations, processMarkdown, translatePath } from '@/i18n/utils';
import BaseLayout from '@/layouts/BaseLayout.astro';

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({
        params: { lang }
    }));
}

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);

// Get all collections
const allTools = await getCollection('tools');
const allSnippets = await getCollection('snippets');
const allCssTricks = await getCollection('css-tricks');
const allUsefulLinks = await getCollection('useful-links');

// Sort and get featured/recent items (max 3 per category)
const featuredTools: CollectionEntry<'tools'>[] = allTools
    .sort((a: CollectionEntry<'tools'>, b: CollectionEntry<'tools'>) => {
        if (a.data.featured && !b.data.featured) return -1;
        if (!a.data.featured && b.data.featured) return 1;
        return b.data.createdAt.getTime() - a.data.createdAt.getTime();
    })
    .slice(0, 3);

const featuredSnippets: CollectionEntry<'snippets'>[] = allSnippets
    .sort((a: CollectionEntry<'snippets'>, b: CollectionEntry<'snippets'>) => {
        if (a.data.featured && !b.data.featured) return -1;
        if (!a.data.featured && b.data.featured) return 1;
        return b.data.createdAt.getTime() - a.data.createdAt.getTime();
    })
    .slice(0, 3);

const featuredCssTricks: CollectionEntry<'css-tricks'>[] = allCssTricks
    .sort((a: CollectionEntry<'css-tricks'>, b: CollectionEntry<'css-tricks'>) => {
        if (a.data.featured && !b.data.featured) return -1;
        if (!a.data.featured && b.data.featured) return 1;
        return b.data.createdAt.getTime() - a.data.createdAt.getTime();
    })
    .slice(0, 3);

// Sort by filename (which has numeric prefix like "01-name")
const featuredLinks: CollectionEntry<'useful-links'>[] = allUsefulLinks
    .sort((a: CollectionEntry<'useful-links'>, b: CollectionEntry<'useful-links'>) => {
        return a.id.localeCompare(b.id);
    })
    .slice(0, 4);

// Helper to get localized description for useful-links
const getLinkDescription = (link: CollectionEntry<'useful-links'>) => {
    return lang === 'es' ? link.data.description_es : link.data.description_en;
};

// Helper to get localized description for snippets
const getSnippetDescription = (snippet: CollectionEntry<'snippets'>) => {
    return lang === 'es' ? snippet.data.description_es : snippet.data.description_en;
};

// Helper to clean numeric prefix from slug (e.g., "async/01-sleep" -> "async/sleep")
const cleanSlug = (slug: string) => slug.replace(/\/\d+-/, '/');

const title = t('goodies.title', { markdown: false });
const description = t('goodies.subtitle', { markdown: false });
const goodiesPageDescription = processMarkdown(t('goodies.pageDescription'));

const categories = [
    {
        id: 'tools' as const,
        title: t('goodies.categories.tools'),
        description: processMarkdown(t('tools.pageDescription')),
        items: featuredTools,
        total: allTools.length,
        href: translatePath('/goodies/tools', lang),
        viewAllLabel: t('goodies.dropdown.viewAllTools')
    },
    {
        id: 'snippets' as const,
        title: t('goodies.categories.snippets'),
        description: processMarkdown(t('snippets.pageDescription')),
        items: featuredSnippets,
        total: allSnippets.length,
        href: translatePath('/goodies/snippets', lang),
        viewAllLabel: t('goodies.dropdown.viewAllSnippets')
    },
    {
        id: 'css-tricks' as const,
        title: t('goodies.categories.cssTricks'),
        description: processMarkdown(t('cssTricks.pageDescription')),
        items: featuredCssTricks,
        total: allCssTricks.length,
        href: translatePath('/goodies/css-tricks', lang),
        viewAllLabel: t('goodies.dropdown.viewAllCssTricks')
    },
    {
        id: 'useful-links' as const,
        title: t('goodies.categories.usefulLinks'),
        description: processMarkdown(t('usefulLinks.pageDescription')),
        items: featuredLinks,
        total: allUsefulLinks.length,
        href: translatePath('/goodies/useful-links', lang),
        viewAllLabel: t('goodies.dropdown.viewAllLinks')
    }
];
---

<BaseLayout title={title} description={description}>
    <div class="relative section overflow-hidden pt-32" style={`background-color: ${sectionsColors.goodies}`}>
        <AnimatedGradientBackground />

        <div class="container-custom">
            <!-- Header -->
            <div class="mb-16">
                <SectionTitle title={t('goodies.title', { markdown: true })} subtitle={t('goodies.subtitle', { markdown: true })} />

                <!-- Page Description -->
                <div class="mt-8 text-sm text-foreground-secondary max-w-3xl mx-auto leading-relaxed text-center" set:html={goodiesPageDescription} />
            </div>

            <!-- Categories Grid -->
            <div class="space-y-16">
                {categories.map((category) => (
                    <section>
                        <!-- Category Header -->
                        <div class="mb-8">
                            <div class="flex items-center justify-between mb-3">
                                <div class="flex items-center gap-3">
                                    <CategoryIcon name={category.id} size={28} class="text-primary" />
                                    <div>
                                        <h2 class="text-xl font-bold">{category.title}</h2>
                                        <p class="text-sm text-foreground-secondary">{category.total} items</p>
                                    </div>
                                </div>
                                <a
                                    href={category.href}
                                    class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg border border-foreground/10 text-foreground-secondary hover:border-primary hover:text-primary transition-colors"
                                >
                                    {category.viewAllLabel}
                                    <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                    </svg>
                                </a>
                            </div>
                            <p class="text-sm text-foreground-secondary max-w-3xl leading-relaxed ml-10" set:html={category.description} />
                        </div>

                        <!-- Items Preview -->
                        {category.items.length > 0 ? (
                            <div class={`grid gap-4 ${category.id === 'useful-links' ? 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4' : 'grid-cols-1 md:grid-cols-3'}`}>
                                {category.id === 'tools' && featuredTools.map((tool) => (
                                    <div
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-5 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <div class="flex items-center gap-2 mb-3">
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                                                {tool.data.category}
                                            </span>
                                            {tool.data.featured && <span class="text-xs">â˜…</span>}
                                        </div>
                                        <h3 class="font-semibold mb-2">{tool.data.title}</h3>
                                        <p class="text-sm text-foreground-secondary line-clamp-2 mb-4">{tool.data.description}</p>
                                        <div class="flex items-center gap-2">
                                            <a
                                                href={tool.data.siteUrl}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-lg bg-primary text-primary-foreground hover:bg-primary/90 transition-colors"
                                            >
                                                <svg class="w-3.5 h-3.5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                                </svg>
                                                {t('tools.goToSite')}
                                            </a>
                                            <a
                                                href={tool.data.repoUrl}
                                                target="_blank"
                                                rel="noopener noreferrer"
                                                class="inline-flex items-center gap-1.5 px-3 py-1.5 text-xs font-medium rounded-lg border border-foreground/10 text-foreground-secondary hover:border-primary hover:text-primary transition-colors"
                                            >
                                                <svg class="w-3.5 h-3.5" fill="currentColor" viewBox="0 0 24 24">
                                                    <path d="M12 0c-6.626 0-12 5.373-12 12 0 5.302 3.438 9.8 8.207 11.387.599.111.793-.261.793-.577v-2.234c-3.338.726-4.033-1.416-4.033-1.416-.546-1.387-1.333-1.756-1.333-1.756-1.089-.745.083-.729.083-.729 1.205.084 1.839 1.237 1.839 1.237 1.07 1.834 2.807 1.304 3.492.997.107-.775.418-1.305.762-1.604-2.665-.305-5.467-1.334-5.467-5.931 0-1.311.469-2.381 1.236-3.221-.124-.303-.535-1.524.117-3.176 0 0 1.008-.322 3.301 1.23.957-.266 1.983-.399 3.003-.404 1.02.005 2.047.138 3.006.404 2.291-1.552 3.297-1.23 3.297-1.23.653 1.653.242 2.874.118 3.176.77.84 1.235 1.911 1.235 3.221 0 4.609-2.807 5.624-5.479 5.921.43.372.823 1.102.823 2.222v3.293c0 .319.192.694.801.576 4.765-1.589 8.199-6.086 8.199-11.386 0-6.627-5.373-12-12-12z"/>
                                                </svg>
                                                {t('tools.goToRepo')}
                                            </a>
                                        </div>
                                    </div>
                                ))}

                                {category.id === 'snippets' && featuredSnippets.map((snippet) => (
                                    <a
                                        href={translatePath(`/goodies/snippets/${cleanSlug(snippet.slug)}`, lang)}
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-5 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <div class="flex items-center gap-2 mb-3">
                                            <LanguageIcon name={snippet.data.language} size={18} class="text-primary/80" />
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                                                {snippet.data.language}
                                            </span>
                                        </div>
                                        <h3 class="font-semibold mb-2 group-hover:text-primary transition-colors">{snippet.data.name}</h3>
                                        <p class="text-sm text-foreground-secondary line-clamp-2">{getSnippetDescription(snippet)}</p>
                                    </a>
                                ))}

                                {category.id === 'css-tricks' && featuredCssTricks.map((trick) => (
                                    <a
                                        href={translatePath(`/goodies/css-tricks/${trick.slug}`, lang)}
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-5 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <div class="flex items-center gap-2 mb-3">
                                            <CategoryIcon name="css-tricks" size={18} class="text-primary/80" />
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                                                CSS
                                            </span>
                                        </div>
                                        <h3 class="font-semibold mb-2 group-hover:text-primary transition-colors line-clamp-1">{trick.data.title}</h3>
                                        <p class="text-sm text-foreground-secondary line-clamp-2">{trick.data.description}</p>
                                    </a>
                                ))}

                                {category.id === 'useful-links' && featuredLinks.map((link) => (
                                    <a
                                        href={link.data.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-4 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors flex items-center gap-2 text-sm">
                                            {link.data.name}
                                            <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                            </svg>
                                        </h3>
                                        <p class="text-xs text-foreground-secondary line-clamp-2">{getLinkDescription(link)}</p>
                                    </a>
                                ))}
                            </div>
                        ) : (
                            <div class="text-center py-12 rounded-xl border border-foreground/10 bg-card">
                                <p class="text-foreground-secondary">Coming soon...</p>
                            </div>
                        )}
                    </section>
                ))}
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .line-clamp-1 {
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
