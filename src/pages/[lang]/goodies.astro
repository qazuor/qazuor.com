---
import type { CollectionEntry } from 'astro:content';
import { getCollection } from 'astro:content';
import AnimatedGradientBackground from '@/components/ui/AnimatedGradientBackground.astro';
import SectionTitle from '@/components/ui/SectionTitle.astro';
import { sectionsColors } from '@/data/colors';
import { languages } from '@/i18n/ui';
import { getLangFromUrl, getTranslations, translatePath } from '@/i18n/utils';
import BaseLayout from '@/layouts/BaseLayout.astro';

export function getStaticPaths() {
    return Object.keys(languages).map((lang) => ({
        params: { lang }
    }));
}

const lang = getLangFromUrl(Astro.url);
const t = getTranslations(lang);

// Get all collections
const allTools = await getCollection('tools');
const allSnippets = await getCollection('snippets');
const allCssTricks = await getCollection('css-tricks');
const allUsefulLinks = await getCollection('useful-links');

// Sort and get featured/recent items (max 3 per category)
const featuredTools: CollectionEntry<'tools'>[] = allTools
    .sort((a: CollectionEntry<'tools'>, b: CollectionEntry<'tools'>) => {
        if (a.data.featured && !b.data.featured) return -1;
        if (!a.data.featured && b.data.featured) return 1;
        return b.data.createdAt.getTime() - a.data.createdAt.getTime();
    })
    .slice(0, 3);

const featuredSnippets: CollectionEntry<'snippets'>[] = allSnippets
    .sort((a: CollectionEntry<'snippets'>, b: CollectionEntry<'snippets'>) => {
        if (a.data.featured && !b.data.featured) return -1;
        if (!a.data.featured && b.data.featured) return 1;
        return b.data.createdAt.getTime() - a.data.createdAt.getTime();
    })
    .slice(0, 3);

const featuredCssTricks: CollectionEntry<'css-tricks'>[] = allCssTricks
    .sort((a: CollectionEntry<'css-tricks'>, b: CollectionEntry<'css-tricks'>) => {
        if (a.data.featured && !b.data.featured) return -1;
        if (!a.data.featured && b.data.featured) return 1;
        return b.data.createdAt.getTime() - a.data.createdAt.getTime();
    })
    .slice(0, 3);

const featuredLinks: CollectionEntry<'useful-links'>[] = allUsefulLinks
    .sort((a: CollectionEntry<'useful-links'>, b: CollectionEntry<'useful-links'>) => {
        if (a.data.featured && !b.data.featured) return -1;
        if (!a.data.featured && b.data.featured) return 1;
        return a.data.order - b.data.order;
    })
    .slice(0, 4);

const title = t('goodies.title', { markdown: false });
const description = t('goodies.subtitle', { markdown: false });

const categories = [
    {
        id: 'tools',
        title: t('goodies.categories.tools'),
        icon: 'üõ†Ô∏è',
        items: featuredTools,
        total: allTools.length,
        href: translatePath('/goodies/tools', lang),
        viewAllLabel: t('goodies.dropdown.viewAllTools')
    },
    {
        id: 'snippets',
        title: t('goodies.categories.snippets'),
        icon: 'üìù',
        items: featuredSnippets,
        total: allSnippets.length,
        href: translatePath('/goodies/snippets', lang),
        viewAllLabel: t('goodies.dropdown.viewAllSnippets')
    },
    {
        id: 'css-tricks',
        title: t('goodies.categories.cssTricks'),
        icon: 'üé®',
        items: featuredCssTricks,
        total: allCssTricks.length,
        href: translatePath('/goodies/css-tricks', lang),
        viewAllLabel: t('goodies.dropdown.viewAllCssTricks')
    },
    {
        id: 'useful-links',
        title: t('goodies.categories.usefulLinks'),
        icon: 'üîó',
        items: featuredLinks,
        total: allUsefulLinks.length,
        href: translatePath('/goodies/useful-links', lang),
        viewAllLabel: t('goodies.dropdown.viewAllLinks')
    }
];

const languageIcons: Record<string, string> = {
    typescript: 'üî∑',
    javascript: 'üü°',
    css: 'üé®',
    html: 'üåê',
    bash: 'üíª',
    python: 'üêç',
    other: 'üì¶'
};
---

<BaseLayout title={title} description={description}>
    <div class="relative section overflow-hidden pt-32" style={`background-color: ${sectionsColors.goodies}`}>
        <AnimatedGradientBackground />

        <div class="container-custom">
            <!-- Header -->
            <div class="mb-16">
                <SectionTitle title={t('goodies.title', { markdown: true })} subtitle={t('goodies.subtitle', { markdown: true })} />
            </div>

            <!-- Categories Grid -->
            <div class="space-y-16">
                {categories.map((category) => (
                    <section>
                        <!-- Category Header -->
                        <div class="flex items-center justify-between mb-8">
                            <div class="flex items-center gap-3">
                                <span class="text-3xl">{category.icon}</span>
                                <div>
                                    <h2 class="text-xl font-bold">{category.title}</h2>
                                    <p class="text-sm text-foreground-secondary">{category.total} items</p>
                                </div>
                            </div>
                            <a
                                href={category.href}
                                class="inline-flex items-center gap-2 px-4 py-2 text-sm font-medium rounded-lg border border-foreground/10 text-foreground-secondary hover:border-primary hover:text-primary transition-colors"
                            >
                                {category.viewAllLabel}
                                <svg class="w-4 h-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
                                </svg>
                            </a>
                        </div>

                        <!-- Items Preview -->
                        {category.items.length > 0 ? (
                            <div class={`grid gap-4 ${category.id === 'useful-links' ? 'grid-cols-1 md:grid-cols-2 lg:grid-cols-4' : 'grid-cols-1 md:grid-cols-3'}`}>
                                {category.id === 'tools' && featuredTools.map((tool) => (
                                    <a
                                        href={translatePath(`/goodies/tools/${tool.slug}`, lang)}
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-5 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <div class="flex items-center gap-2 mb-3">
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                                                {tool.data.category}
                                            </span>
                                            {tool.data.featured && <span class="text-xs">‚òÖ</span>}
                                        </div>
                                        <h3 class="font-semibold mb-2 group-hover:text-primary transition-colors">{tool.data.title}</h3>
                                        <p class="text-sm text-foreground-secondary line-clamp-2">{tool.data.description}</p>
                                    </a>
                                ))}

                                {category.id === 'snippets' && featuredSnippets.map((snippet) => (
                                    <a
                                        href={translatePath(`/goodies/snippets/${snippet.slug}`, lang)}
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-5 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <div class="flex items-center gap-2 mb-3">
                                            <span class="text-lg">{languageIcons[snippet.data.language] || 'üì¶'}</span>
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                                                {snippet.data.language}
                                            </span>
                                        </div>
                                        <h3 class="font-semibold mb-2 group-hover:text-primary transition-colors">{snippet.data.title}</h3>
                                        <p class="text-sm text-foreground-secondary line-clamp-2">{snippet.data.description}</p>
                                    </a>
                                ))}

                                {category.id === 'css-tricks' && featuredCssTricks.map((trick) => (
                                    <a
                                        href={translatePath(`/goodies/css-tricks/${trick.slug}`, lang)}
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-5 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <div class="flex items-center gap-2 mb-3">
                                            <span class="text-lg">üé®</span>
                                            <span class="px-2 py-1 text-xs font-medium rounded-full bg-primary/10 text-primary">
                                                CSS
                                            </span>
                                        </div>
                                        <h3 class="font-semibold mb-2 group-hover:text-primary transition-colors line-clamp-1">{trick.data.title}</h3>
                                        <p class="text-sm text-foreground-secondary line-clamp-2">{trick.data.description}</p>
                                    </a>
                                ))}

                                {category.id === 'useful-links' && featuredLinks.map((link) => (
                                    <a
                                        href={link.data.url}
                                        target="_blank"
                                        rel="noopener noreferrer"
                                        class="group relative overflow-hidden rounded-xl border border-foreground/10 bg-card p-4 transition-all duration-300 hover:border-primary/30 hover:shadow-lg hover:-translate-y-1"
                                    >
                                        <h3 class="font-semibold mb-1 group-hover:text-primary transition-colors flex items-center gap-2 text-sm">
                                            {link.data.name}
                                            <svg class="w-3 h-3 opacity-50" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 6H6a2 2 0 00-2 2v10a2 2 0 002 2h10a2 2 0 002-2v-4M14 4h6m0 0v6m0-6L10 14" />
                                            </svg>
                                        </h3>
                                        <p class="text-xs text-foreground-secondary line-clamp-2">{link.data.description}</p>
                                    </a>
                                ))}
                            </div>
                        ) : (
                            <div class="text-center py-12 rounded-xl border border-foreground/10 bg-card">
                                <p class="text-foreground-secondary">Coming soon...</p>
                            </div>
                        )}
                    </section>
                ))}
            </div>
        </div>
    </div>
</BaseLayout>

<style>
    .line-clamp-1 {
        display: -webkit-box;
        -webkit-line-clamp: 1;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
    .line-clamp-2 {
        display: -webkit-box;
        -webkit-line-clamp: 2;
        -webkit-box-orient: vertical;
        overflow: hidden;
    }
</style>
