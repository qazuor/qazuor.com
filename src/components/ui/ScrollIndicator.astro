---
import ArrowDownIcon from '@/icons/ui/arrow-down.svg?raw';

interface Props {
    text: string;
    className?: string;
    variant?: 'desktop' | 'mobile';
}

const { text, className = '', variant = 'desktop' } = Astro.props;
---

{variant === 'desktop' ? (
    <div class={`flex flex-col items-center w-fit relative z-50 ${className}`}>
        <span class="text-sm text-foreground-secondary text-center">{text}</span>
        <div class="w-6 h-6 mx-auto text-foreground-secondary animate-bounce flex items-center justify-center [&>svg]:w-full [&>svg]:h-full" set:html={ArrowDownIcon} />
    </div>
) : (
    <div class={`flex flex-col items-center w-fit relative z-50 ${className}`}>
        <span class="text-xs text-foreground-secondary mb-1 text-center">{text}</span>
        <div class="w-5 h-5 mx-auto text-foreground-secondary animate-bounce flex items-center justify-center [&>svg]:w-full [&>svg]:h-full" set:html={ArrowDownIcon} />
    </div>
)}
