                type="button"
                class="hidden md:flex min-[1200px]:hidden p-1.5 rounded-lg text-foreground-secondary hover:bg-foreground/5 transition-colors duration-base"
                aria-label={t('aria.toggleActionsMenu')}
                aria-expanded="false"
                aria-controls="actions-menu"
