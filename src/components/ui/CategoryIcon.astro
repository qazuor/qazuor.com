---
type CategoryIconName =
    | 'tools'
    | 'snippets'
    | 'css-tricks'
    | 'useful-links'
    | 'documentation'
    | 'library'
    | 'tool'
    | 'learning'
    | 'inspiration'
    | 'community'
    | 'other';

interface Props {
    name: CategoryIconName;
    class?: string;
    size?: number;
}

const { name, class: className = '', size = 20 } = Astro.props;

// SVG paths from Lucide icons
const icons: Record<CategoryIconName, string> = {
    // Wrench
