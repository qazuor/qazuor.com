---
import Timeline from '../interactive/Timeline';

interface Props {
  primaryColor?: string;
  name?: string;
  role?: string;
  location?: string;
  experience?: string;
  email?: string;
  availability?: string;
  bio?: string;
  lang?: 'en' | 'es';
  translations?: {
    title: string;
    subtitle: string;
    connect: string;
  };
}

const {
  primaryColor = '#6366f1',
  name = 'qazuor',
  role = 'Full-Stack Developer',
  location = 'Remote',
  experience = '5+ years',
  email = 'hello@qazuor.com',
  availability = 'Open to opportunities',
  bio = 'Passionate about creating exceptional digital experiences with modern web technologies. Specialized in React, TypeScript, and performance optimization.',
  lang = 'en',
  translations = {
    title: 'About Me',
    subtitle: 'Get to know me through code',
    connect: "Let's build something amazing together!",
  },
} = Astro.props;
---

<section class="section about-section" id="about" style={`background-color: ${primaryColor}`}>
  <div class="container-custom">
    <div class="max-w-3xl mx-auto">
      <!-- Section Title -->
      <div class="mb-12 text-center">
        <h2 class="text-3xl md:text-4xl font-bold mb-4">
          <span class="gradient-text">{translations.title}</span>
        </h2>
        <p class="text-foreground-secondary text-lg">{translations.subtitle}</p>
      </div>

      <!-- Code Block -->
      <div
        class="relative bg-gray-900 dark:bg-gray-800 rounded-xl border-2 border-gray-700 dark:border-gray-600 overflow-hidden shadow-2xl"
      >
        <!-- Code Header -->
        <div
          class="flex items-center gap-2 px-4 py-3 border-b-2 border-gray-700 dark:border-gray-600 bg-gray-800 dark:bg-gray-900"
        >
          <div class="flex gap-2">
            <div class="w-3 h-3 rounded-full bg-red-500"></div>
            <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
            <div class="w-3 h-3 rounded-full bg-green-500"></div>
          </div>
          <span class="ml-2 text-sm text-gray-400 font-mono">developer.js</span>
        </div>

        <!-- Code Content -->
        <div class="p-4 md:p-6 font-mono text-sm overflow-x-auto bg-gray-900 dark:bg-gray-800">
          <div
            class="code-line px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
          >
            <span class="text-blue-400">const</span>
            <span class="text-white"> developer</span>
            <span class="text-gray-300"> = </span>
            <span class="text-gray-300">{} </span>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">name</span>
              <span class="text-gray-300">: </span>
              <span class="text-green-400">'{name}'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">role</span>
              <span class="text-gray-300">: </span>
              <span class="text-green-400">'{role}'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">location</span>
              <span class="text-gray-300">: </span>
              <span class="text-green-400">'{location}'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">experience</span>
              <span class="text-gray-300">: </span>
              <span class="text-green-400">'{experience}'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">email</span>
              <span class="text-gray-300">: </span>
              <span class="text-green-400">'{email}'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">availability</span>
              <span class="text-gray-300">: </span>
              <span class="text-green-400">'{availability}'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">bio</span>
              <span class="text-gray-300">: </span>
              <span class="text-green-400">'{bio}'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">skills</span>
              <span class="text-gray-300">: </span>
              <span class="text-gray-300">[</span>
            </div>

            <div
              class="code-line ml-8 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-green-400">'React'</span>
              <span class="text-gray-300">, </span>
              <span class="text-green-400">'TypeScript'</span>
              <span class="text-gray-300">, </span>
              <span class="text-green-400">'Node.js'</span>
              <span class="text-gray-300">,</span>
            </div>

            <div
              class="code-line ml-8 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-green-400">'Astro'</span>
              <span class="text-gray-300">, </span>
              <span class="text-green-400">'GSAP'</span>
              <span class="text-gray-300">, </span>
              <span class="text-green-400">'Tailwind CSS'</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-gray-300">],</span>
            </div>

            <div
              class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-red-400">connect</span>
              <span class="text-gray-300">: </span>
              <span class="text-blue-400">function</span>
              <span class="text-gray-300">() {} </span>

              <div
                class="code-line ml-8 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
              >
                <span class="text-blue-400">return </span>
                <span class="text-green-400">"{translations.connect}"</span>
                <span class="text-gray-300">;</span>
              </div>

              <div
                class="code-line ml-4 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
              >
                <span class="text-gray-300"></span>
              </div>
            </div>

            <div
              class="code-line px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
            >
              <span class="text-gray-300"></span>;
            </div>
          </div>

          <div
            class="code-line mt-3 px-2 py-1 -mx-2 rounded transition-all duration-200 hover:bg-blue-500/30 cursor-pointer"
          >
            <span class="text-blue-400">export default </span>
            <span class="text-white">developer</span>
            <span class="text-gray-300">;</span>
          </div>
        </div>
      </div>
    </div>

    <!-- Timeline Section -->
    <Timeline lang={lang} client:load />
  </div>
</section>
