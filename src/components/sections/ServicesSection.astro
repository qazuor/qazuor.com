---
import AnimatedGradientBackground from '@/components/ui/AnimatedGradientBackground.astro';
import SectionTitle from '@/components/ui/SectionTitle.astro';
import ServiceIcon from '@/components/ui/ServiceIcon.astro';
import type { Service } from '@/data/services';
import { services } from '@/data/services';

export interface Props {
    primaryColor: string;
    translations: {
        title: string;
        subtitle: string;
        description: string;
        webApps: {
            title: string;
            description: string;
            features: string[];
        };
        landingPages: {
            title: string;
            description: string;
            features: string[];
        };
        automation: {
            title: string;
            description: string;
            features: string[];
        };
        socialDesign: {
            title: string;
            description: string;
            features: string[];
        };
        cta: {
            title: string;
            description: string;
            button: string;
            consultation: string;
        };
        pricing: {
            from: string;
            consultation: string;
            getQuote: string;
        };
    };
}

const { primaryColor, translations } = Astro.props;

// Map service IDs to their translations
const serviceTranslations: Record<
    string,
    {
        title: string;
        description: string;
        features: string[];
    }
> = {
    'web-apps': translations.webApps,
    'landing-pages': translations.landingPages,
    'automation-integration': translations.automation,
    'social-media-design': translations.socialDesign
};

// Helper function to format pricing display
const formatPricing = (service: Service) => {
    switch (service.pricing.type) {
        case 'from':
            return `${translations.pricing.from} $${service.pricing.min?.toLocaleString()}`;
        case 'range':
            return `$${service.pricing.min?.toLocaleString()} - $${service.pricing.max?.toLocaleString()}`;
        case 'consultation':
            return translations.pricing.consultation || 'Consultar';
        default:
            return translations.pricing.consultation || 'Consultar';
    }
};
---

<section 
    id="services" 
    class="relative section services-section overflow-hidden"
    style={`background-color: ${primaryColor}`}
>
    <!-- Animated Gradient Background -->
    <AnimatedGradientBackground />
    
    <div class="container-custom">
        <!-- Section Title -->
        <SectionTitle title={translations.title} subtitle={translations.subtitle} />

        <!-- Services Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mb-16">
            {services.map((service) => {
                const serviceTranslation = serviceTranslations[service.id];
                
                return (
                    <div class="group bg-foreground/5 backdrop-blur-sm rounded-2xl p-8 border border-foreground/10 hover:bg-foreground/10 hover:border-foreground/20 transition-all duration-300">
                        
                        <!-- Service Header -->
                        <div class="flex items-start gap-4 mb-6">
                            <ServiceIcon name={service.iconId} size={40} class="text-primary" />
                            <div class="flex-1">
                                <h3 
                                    class="text-2xl font-bold text-foreground mb-2"
                                    set:html={serviceTranslation.title}
                                />
                                <p class="text-foreground-secondary leading-relaxed">
                                    {serviceTranslation.description}
                                </p>
                            </div>
                        </div>

                        <!-- Features List -->
                        <div class="mb-6">
                            <ul class="space-y-2">
                                {serviceTranslation.features.map((feature: string) => (
                                    <li class="flex items-center text-foreground-secondary">
                                        <svg class="w-5 h-5 text-primary mr-3 flex-shrink-0" fill="currentColor" viewBox="0 0 20 20">
                                            <path fill-rule="evenodd" d="M16.707 5.293a1 1 0 010 1.414l-8 8a1 1 0 01-1.414 0l-4-4a1 1 0 011.414-1.414L8 12.586l7.293-7.293a1 1 0 011.414 0z" clip-rule="evenodd" />
                                        </svg>
                                        {feature}
                                    </li>
                                ))}
                            </ul>
                        </div>

                        <!-- Service Details -->
                        <div class="mb-6">
                            <!-- Pricing -->
                            <div class="flex items-center justify-between p-4 bg-foreground/5 rounded-lg border border-foreground/10">
                                <span class="text-foreground-secondary font-medium">Precio:</span>
                                <span class="text-foreground font-bold text-lg">{formatPricing(service)}</span>
                            </div>
                        </div>

                        <!-- CTA Button -->
                        <a 
                            href={service.ctaUrl}
                            class="inline-flex items-center justify-center w-full px-6 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-all duration-200 group-hover:scale-105"
                        >
                            {service.ctaText}
                            <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M9 5l7 7-7 7" />
                            </svg>
                        </a>
                    </div>
                );
            })}
        </div>

        <!-- Call to Action Section -->
        <div class="text-center bg-foreground/5 backdrop-blur-sm rounded-2xl p-8 border border-foreground/10">
            <h3 class="text-2xl font-bold text-foreground mb-4">
                {translations.cta.title}
            </h3>
            <p class="text-foreground-secondary mb-6 max-w-2xl mx-auto">
                {translations.cta.description}
            </p>
            
            <!-- Main CTA Button -->
            <div class="flex flex-col sm:flex-row gap-4 justify-center items-center">
                <a 
                    href="/contact"
                    class="inline-flex items-center px-8 py-3 bg-primary text-white font-semibold rounded-lg hover:bg-primary-dark transition-colors duration-200"
                >
                    {translations.cta.button}
                    <svg class="w-4 h-4 ml-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width={2} d="M8 12h.01M12 12h.01M16 12h.01M21 12c0 4.418-3.582 8-8 8a8.959 8.959 0 01-4.906-1.478L3 21l2.478-5.094A8.959 8.959 0 013 12c0-4.418 3.582-8 8-8s8 3.582 8 8z" />
                    </svg>
                </a>
                
                <!-- Free Consultation Badge -->
                <div class="flex items-center text-foreground-secondary text-sm">
                    <svg class="w-4 h-4 mr-2 text-green-400" fill="currentColor" viewBox="0 0 20 20">
                        <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    {translations.cta.consultation}
                </div>
            </div>
        </div>
    </div>
</section>