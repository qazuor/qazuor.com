{
    "name": "qazuor.com",
    "type": "module",
    "version": "0.0.1",
    "scripts": {
        "dev": "astro dev",
        "start": "astro dev",
        "build": "astro check && astro build",
        "build:analyze": "ANALYZE=true astro build",
        "preview": "astro preview",
        "astro": "astro",
        "typecheck": "astro check",
        "lint": "biome check .",
        "lint:fix": "biome check --write .",
        "format": "biome format --write .",
        "format:prettier-astro": "npx prettier --write --print-width 120 --tab-width 4 --use-tabs false --single-quote true --semi true --trailing-comma none --parser astro --plugin prettier-plugin-astro \"src/**/*.astro\"",
        "format:all": "biome format --write . && pnpm format:prettier-astro",
        "format:check": "biome check .",
        "format:md": "prettier --write '**/*.md'",
        "format:md:claude": "prettier --write '.claude/**/*.md'",
        "check:budgets": "./scripts/check-budgets.sh",
        "generate-colors": "node scripts/generate-colors.js",
        "lint:md": "markdownlint-cli2 '**/*.md' '#node_modules'",
        "test": "vitest",
        "test:ui": "vitest --ui",
        "test:coverage": "vitest --coverage",
        "e2e": "playwright test tests/e2e/",
        "e2e:ui": "playwright test tests/e2e/ --ui",
        "e2e:debug": "playwright test tests/e2e/ --debug",
        "e2e:headed": "playwright test tests/e2e/ --headed",
        "test:visual": "playwright test tests/visual/",
        "test:visual:update": "playwright test tests/visual/ --update-snapshots",
        "test:visual:ui": "playwright test tests/visual/ --ui",
        "lighthouse": "lhci autorun",
        "lighthouse:collect": "lhci collect",
        "lighthouse:assert": "lhci assert",
        "perf:check": "npm run build && lhci autorun",
        "perf:test": "node scripts/performance-test.js",
        "perf:build": "npm run build && npm run perf:test",
        "prepare": "husky",
        "env:sync": "./scripts/sync-vercel-env.sh",
        "env:sync:prod": "./scripts/sync-vercel-env.sh production"
    },
    "dependencies": {
        "@astrojs/mdx": "^4.3.10",
        "@astrojs/sitemap": "^3.6.0",
        "@astrojs/vercel": "^9.0.2",
        "@fontsource/inter": "^5.2.8",
        "@fontsource/jetbrains-mono": "^5.2.8",
        "@formkit/auto-animate": "^0.9.0",
        "@playwright/test": "^1.56.1",
        "@resvg/resvg-js": "^2.6.2",
        "@reunmedia/astro-normalize-trailing-slash": "^0.1.1",
        "@studio-freight/lenis": "^1.0.42",
        "astro": "^5.15.9",
        "astro-lighthouse": "^0.1.3",
        "astro-subsites": "^0.1.0",
        "clsx": "^2.1.1",
        "cmdk": "^1.1.1",
        "embla-carousel-react": "^8.6.0",
        "expressive-code-language-badge": "^1.1.0",
        "framer-motion": "^12.23.24",
        "fuse.js": "^7.1.0",
        "gsap": "^3.13.0",
        "i18next-fs-backend": "^2.6.0",
        "lucide-react": "^0.552.0",
        "mermaid": "^11.4.1",
        "react": "^19.2.0",
        "react-dom": "^19.2.0",
        "react-masonry-css": "^1.0.16",
        "resend": "^6.5.2",
        "satori": "^0.18.3",
        "sharp": "^0.34.5",
        "tailwind-merge": "^3.3.1",
        "typeit": "^8.8.7",
        "yet-another-react-lightbox": "^3.25.0"
    },
    "devDependencies": {
        "@astrojs/check": "^0.9.5",
        "@astrojs/react": "^4.4.1",
        "@astrojs/tailwind": "^6.0.2",
        "@axe-core/playwright": "^4.11.0",
        "@biomejs/biome": "^2.3.4",
        "@commitlint/cli": "^20.1.0",
        "@commitlint/config-conventional": "^20.0.0",
        "@lhci/cli": "^0.15.1",
        "@philnash/astro-pagination": "^0.5.0",
        "@testing-library/jest-dom": "^6.9.1",
        "@testing-library/react": "^16.3.0",
        "@testing-library/user-event": "^14.6.1",
        "@types/react": "^19.2.2",
        "@types/react-dom": "^19.2.2",
        "@vite-pwa/astro": "^1.1.1",
        "@vitejs/plugin-react": "^5.1.0",
        "@vitest/coverage-v8": "^4.0.7",
        "@vitest/ui": "^4.0.7",
        "astro-compressor": "^1.2.0",
        "astro-expressive-code": "^0.41.3",
        "astro-favicons": "^3.1.5",
        "astro-min": "^1.3.1",
        "glob": "^13.0.0",
        "happy-dom": "^20.0.10",
        "husky": "^9.1.7",
        "lint-staged": "^16.2.6",
        "markdownlint-cli2": "^0.18.1",
        "prettier": "^3.6.2",
        "prettier-plugin-astro": "^0.14.1",
        "rollup-plugin-visualizer": "^6.0.5",
        "tailwindcss": "^3.4.18",
        "tailwindcss-animate": "^1.0.7",
        "typescript": "^5.7.3",
        "vite-plugin-compression": "^0.5.1",
        "vitest": "^4.0.7"
    }
}
