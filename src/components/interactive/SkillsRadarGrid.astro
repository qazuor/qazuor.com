---
import { RadarChart } from './RadarChart';

export interface RadarCategory {
    id: string;
    title: string;
    skills: Array<{
        name: string;
        value: number;
        color: string;
        icon?: string;
    }>;
}

interface Props {
    categories: RadarCategory[];
    description?: string;
    languageIcons?: {
        spanish: string;
        english: string;
    };
    languageTranslations?: {
        title: string;
        native: string;
        writtenOnly: string;
    };
}

const { categories, description, languageIcons, languageTranslations } = Astro.props;
---

<div class="skills-radar-grid">
    <!-- First Row: Description Text + Language Skills (Full Width) -->
    <div class="description-languages-wrapper">
        <div class="description-content">
            {description && <div class="description-text" set:html={description} />}

            <!-- Language Skills -->
            <div class="language-skills" data-animate>
                <h4 class="language-title"
                    >{languageTranslations?.title || 'Languages'}</h4
                >
                <div class="language-item" data-animate-bar>
                    <div class="language-label">
                        <div class="language-name-wrapper">
                            {
                                languageIcons?.spanish && (
                                    <span
                                        class="language-flag"
                                        set:html={languageIcons.spanish}
                                    />
                                )
                            }
                            <span class="language-name"
                                >Spanish <span class="language-note"
                                    >({languageTranslations?.native ||
                                        'native'})</span
                                ></span
                            >
                        </div>
                        <span class="language-value">100%</span>
                    </div>
                    <div class="language-bar-wrapper">
                        <div class="language-bar">
                            <div class="language-bar-bg"></div>
                            <div
                                class="language-progress spanish-progress"
                                data-value="100"
                            ></div>
                        </div>
                    </div>
                </div>
                <div class="language-item" data-animate-bar>
                    <div class="language-label">
                        <div class="language-name-wrapper">
                            {
                                languageIcons?.english && (
                                    <span
                                        class="language-flag"
                                        set:html={languageIcons.english}
                                    />
                                )
                            }
                            <span class="language-name"
                                >English <span class="language-note"
                                    >({languageTranslations?.writtenOnly ||
                                        'written only'})</span
                                ></span
                            >
                        </div>
                        <span class="language-value">85%</span>
                    </div>
                    <div class="language-bar-wrapper">
                        <div class="language-bar">
                            <div class="language-bar-bg"></div>
                            <div
                                class="language-progress english-progress"
                                data-value="85"
                            ></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Second Row: Two Radar Charts Side by Side (Desktop) / Stacked (Mobile) -->
    <div class="charts-wrapper">
        <!-- Technical Skills Chart -->
        <div class="radar-chart-wrapper">
            <RadarChart
                client:idle
                title={categories[0].title}
                titleHtml={true}
                skills={categories[0].skills}
                size={550}
                gridLevels={5}
                maxValue={100}
                className="w-full"
            />
        </div>

        <!-- Human & Creative Skills Chart -->
        <div class="radar-chart-wrapper">
            <RadarChart
                client:idle
                title={categories[1].title}
                titleHtml={true}
                skills={categories[1].skills}
                size={550}
                gridLevels={5}
                maxValue={100}
                className="w-full"
            />
        </div>
    </div>
</div>

<style>
    .skills-radar-grid {
        width: 100%;
        max-width: 1600px;
        margin: 0 auto;
        display: flex;
        flex-direction: column;
        gap: 3rem;
    }

    /* First Row: Description + Languages (Full Width) */
    .description-languages-wrapper {
        width: 100%;
        display: flex;
        justify-content: center;
        padding: 0;
    }

    .description-content {
        max-width: 900px;
        width: 100%;
    }

    /* Second Row: Two Charts Side by Side */
    .charts-wrapper {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
        width: 100%;
    }

    @media (min-width: 1024px) {
        .charts-wrapper {
            grid-template-columns: repeat(2, 1fr);
            gap: 3rem;
        }
    }

    .radar-chart-wrapper {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: flex-start;
        padding: 2rem;
        background: var(--color-background-secondary);
        border: 1px solid var(--color-border);
        border-radius: 1.25rem;
        transition: all 0.3s ease;
        min-height: 100%;
    }

    .radar-chart-wrapper:hover {
        transform: translateY(-4px);
        box-shadow:
            0 12px 30px -5px rgba(0, 0, 0, 0.15),
            0 10px 15px -6px rgba(0, 0, 0, 0.1);
        border-color: var(--color-primary);
    }

    .description-text {
        font-size: 1.125rem;
        line-height: 1.8;
        color: var(--color-foreground);
        margin: 0 0 2.5rem 0;
        text-align: left;
    }

    .description-text :global(strong) {
        color: var(--color-primary);
        font-weight: 600;
    }

    /* Language Skills */
    .language-skills {
        margin-top: 2rem;
    }

    .language-title {
        font-size: 1.25rem;
        font-weight: 600;
        color: var(--color-foreground);
        margin: 0 0 1.5rem 0;
    }

    .language-item {
        margin-bottom: 1.75rem;
    }

    .language-item:last-child {
        margin-bottom: 0;
    }

    .language-label {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 0.75rem;
    }

    .language-name-wrapper {
        display: flex;
        align-items: center;
        gap: 0.5rem;
    }

    .language-flag {
        display: inline-flex;
        align-items: center;
        justify-content: center;
        width: 24px;
        height: 24px;
    }

    .language-flag :global(svg) {
        width: 100%;
        height: 100%;
    }

    .language-name {
        font-size: 1.125rem;
        font-weight: 600;
        color: var(--color-foreground);
    }

    .language-note {
        font-size: 0.875rem;
        font-weight: 400;
        color: var(--color-foreground-secondary);
        opacity: 0.8;
        font-style: italic;
    }

    .language-value {
        font-size: 1rem;
        font-weight: 700;
        color: var(--color-primary);
    }

    .language-bar-wrapper {
        position: relative;
    }

    .language-bar {
        position: relative;
        height: 32px;
        border-radius: 16px;
        overflow: hidden;
        background: var(--color-background-secondary);
        border: 2px solid var(--color-border);
    }

    /* Animated diagonal stripes background */
    .language-bar-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background: repeating-linear-gradient(
            45deg,
            transparent,
            transparent 10px,
            var(--color-border) 10px,
            var(--color-border) 10.5px,
            transparent 10.5px,
            transparent 20px
        );
        opacity: 0.3;
        animation: slide-stripes 40s linear infinite;
        z-index: 0;
    }

    @keyframes slide-stripes {
        0% {
            background-position: 0 0;
        }
        100% {
            background-position: 40px 40px;
        }
    }

    .language-progress {
        position: relative;
        height: 100%;
        width: 0;
        background: var(--color-primary);
        border-radius: 10px;
        transition: width 1.5s cubic-bezier(0.25, 0.46, 0.45, 0.94);
        z-index: 1;
        overflow: hidden;
    }

    /* Specific colors for each language */
    .spanish-progress {
        background: linear-gradient(90deg, var(--color-primary), var(--color-accent));
    }

    .english-progress {
        background: linear-gradient(90deg, var(--color-accent), var(--color-primary));
    }

    .language-progress::before {
        content: '';
        position: absolute;
        top: 0;
        left: -100%;
        width: 300%;
        height: 100%;
        background: repeating-linear-gradient(
            -45deg,
            transparent,
            transparent 10px,
            rgba(255, 255, 255, 0.15) 10px,
            rgba(255, 255, 255, 0.15) 20px
        );
        animation: slide-progress-stripes 30s linear infinite;
    }

    @keyframes slide-progress-stripes {
        0% {
            transform: translateX(0);
        }
        100% {
            transform: translateX(100px);
        }
    }

    .language-progress::after {
        content: '';
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 50%;
        background: linear-gradient(
            180deg,
            rgba(255, 255, 255, 0.3) 0%,
            transparent 100%
        );
    }

    /* Animation states */
    .language-item[data-animate-bar] .language-progress {
        width: 0 !important;
    }

    .language-item[data-animate-bar].animate-in .language-progress {
        width: var(--progress-width) !important;
    }

    /* Mobile optimizations */
    @media (max-width: 1024px) {
        .skills-radar-grid {
            gap: 2rem;
        }

        .charts-wrapper {
            gap: 1.5rem;
        }

        .radar-chart-wrapper {
            padding: 1.5rem;
        }

        .description-text {
            font-size: 1rem;
            line-height: 1.7;
            margin-bottom: 2rem;
        }

        .language-title {
            font-size: 1.125rem;
        }
    }

    @media (max-width: 768px) {
        .skills-radar-grid {
            gap: 2rem;
        }

        .charts-wrapper {
            gap: 2rem;
        }

        .radar-chart-wrapper {
            padding: 1.25rem;
        }

        .description-text {
            font-size: 0.95rem;
            line-height: 1.6;
            margin-bottom: 1.5rem;
        }

        .language-title {
            font-size: 1rem;
        }

        .language-name {
            font-size: 0.9rem;
        }

        .language-value {
            font-size: 0.8rem;
        }
    }

    /* Light mode - Default styles */
    .radar-chart-wrapper {
        background: rgba(0, 0, 0, 0.02);
    }

    .radar-chart-wrapper:hover {
        background: rgba(0, 0, 0, 0.04);
    }

    .description-text {
        color: rgba(0, 0, 0, 0.9);
    }

    .language-bar {
        background: rgba(0, 0, 0, 0.15);
    }

    /* Dark mode - When .dark class is present on html */
    :global(.dark) .radar-chart-wrapper {
        background: rgba(255, 255, 255, 0.05);
    }

    :global(.dark) .radar-chart-wrapper:hover {
        background: rgba(255, 255, 255, 0.08);
    }

    :global(.dark) .description-text {
        color: rgba(255, 255, 255, 0.9);
    }

    :global(.dark) .language-bar {
        background: rgba(255, 255, 255, 0.1);
    }
</style>

<script>
    // Animate language bars on viewport entry
    function initializeLanguageBars() {
        const observerOptions = {
            threshold: 0.5,
            rootMargin: '0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach((entry) => {
                if (entry.isIntersecting) {
                    const languageItems = entry.target.querySelectorAll('[data-animate-bar]');
                    languageItems.forEach((item, index) => {
                        const progressBar = item.querySelector('.language-progress') as HTMLElement;
                        const value = progressBar?.getAttribute('data-value');
                        if (progressBar && value) {
                            progressBar.style.setProperty('--progress-width', `${value}%`);
                            setTimeout(() => {
                                item.classList.add('animate-in');
                            }, index * 150);
                        }
                    });
                    observer.unobserve(entry.target);
                }
            });
        }, observerOptions);

        // Observe language skills section
        const languageSkills = document.querySelector('[data-animate]');
        if (languageSkills) {
            observer.observe(languageSkills);
        }
    }

    // Initialize on initial page load
    document.addEventListener('DOMContentLoaded', initializeLanguageBars);

    // Re-initialize after View Transitions navigation
    document.addEventListener('astro:page-load', initializeLanguageBars);
</script>
