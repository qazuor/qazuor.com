---
/**
 * TrustBadges Component
 *
 * Displays trust indicators in the hero section to build credibility.
 * Shows key metrics and differentiators for LLM citation and user trust.
 * Design: Subtle, text-based with small icons - no prominent backgrounds or borders.
 *
 * @example
 * <TrustBadges
 *   badges={[
 *     { icon: 'clock', text: '10+ Years' },
 *     { icon: 'globe', text: 'Remote Worldwide' }
 *   ]}
 * />
 */

import ClockIcon from '@/icons/ui/clock.svg?raw';
import GlobeIcon from '@/icons/ui/globe.svg?raw';
import StarIcon from '@/icons/ui/star.svg?raw';
import ZapIcon from '@/icons/ui/zap.svg?raw';

export interface TrustBadge {
    /** Icon name: 'clock' | 'globe' | 'zap' | 'star' */
    icon: 'clock' | 'globe' | 'zap' | 'star';
    /** Badge text (short, impactful) */
    text: string;
}

interface Props {
    /** Array of badges to display */
    badges: TrustBadge[];
    /** Additional CSS classes */
    className?: string;
}

const { badges, className = '' } = Astro.props;

const iconMap: Record<TrustBadge['icon'], string> = {
    clock: ClockIcon,
    globe: GlobeIcon,
    zap: ZapIcon,
    star: StarIcon
};
---

<div class:list={['trust-badges flex flex-wrap items-center gap-x-4 gap-y-1 lg:gap-x-5', className]} role="list" aria-label="Trust indicators">
    {
        badges.map((badge, index) => (
            <>
                <div
                    class="trust-badge flex items-center gap-1 text-foreground-muted/80 text-[11px] lg:text-xs"
                    role="listitem"
                >
                    <span
                        class="trust-badge-icon w-3 h-3 lg:w-3.5 lg:h-3.5 opacity-60 flex-shrink-0 [&>svg]:w-full [&>svg]:h-full"
                        aria-hidden="true"
                        set:html={iconMap[badge.icon]}
                    />
                    <span class="whitespace-nowrap">{badge.text}</span>
                </div>
                {index < badges.length - 1 && (
                    <span class="hidden sm:inline text-foreground-muted/30 text-[10px]">â€¢</span>
                )}
            </>
        ))
    }
</div>

<style>
    .trust-badges {
        animation: fadeIn 0.6s ease-out 0.5s both;
    }

    @keyframes fadeIn {
        from {
            opacity: 0;
        }
        to {
            opacity: 1;
        }
    }
</style>
