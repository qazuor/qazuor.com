---
import SocialLink from './SocialLink.astro';

interface Props {
    href: string;
    ariaLabel?: string;
    size?: 'sm' | 'md' | 'lg';
    className?: string;
}

const { href, ariaLabel = 'Email', size = 'md', className = '' } = Astro.props;
---

<SocialLink href={href} ariaLabel={ariaLabel} iconName="mail" size={size} className={className} />
